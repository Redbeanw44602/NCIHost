<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppDefault" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorAccent">#0073FF</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.AppDefault.ActionBar" parent="android:style/Widget.Material.Light.ActionBar">
        <item name="elevation">0dp</item>
        <item name="android:background">?android:colorBackground</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.AppDefault.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppDefault.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppDefault.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="CommonFlatFatButton">
        <item name="android:textColor">@color/stateful_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">clip_horizontal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
    </style>

</resources>